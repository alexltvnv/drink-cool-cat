{%- if section.blocks -%}
  <div class="inner-wrap">
    <div class="running-line">
      {% for num in (1..3) %}
        <span class="text-wrap">
          {%- for block in section.blocks -%}
            {%- if block.settings.text != blank -%}
              <span class="text-item">
                {{ block.settings.text | escape }}   
              </span>
            {%- endif -%}
          {%- endfor -%}
        </span>
      {%- endfor -%}
    </div>
  </div>
{%- endif -%}

<style>
  .running-line-section .text-wrap {
    animation-duration: {{ section.settings.speed }}s;  
  }
</style>


{% schema %}
{
  "name": "Running Line",
  "max_blocks": 20,
  "class": "running-line-section",
  "settings": [
    {
      "type": "range",
      "id": "speed",
      "min": 10,
      "max": 30,
      "step": 1,
      "unit": "s",
      "default": 20,
      "label": "Speed",
      "info": "Speed in seconds, less - faster, more - slower."
    }
  ],
  "blocks": [
    {
      "type": "item",
      "name": "Text",
      "settings": [        
        {
          "type": "text",
          "id": "text",
          "label": "Text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Running Line",
      "category": "Text",
      "blocks": [
        {
          "type": "item"
        },
        {
          "type": "item"
        },
        {
          "type": "item"
        }
      ]
    }
  ]
}
{% endschema %}
