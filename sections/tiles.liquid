{%- if section.blocks -%}

  <div class="container" id="tiles-section">
    <div class="row">
      {%- for block in section.blocks -%}
        <div class="col-12 col-sm-6 tile-item-col">
          <div class="bg-wrap{% if block.settings.overlay == true %} overlay{% endif %}">
            <div class="tile-item {{ block.settings.text_color }}-text text-{{ block.settings.position }}">

                <div class="bg-mobile-wrap">                  
                  {%- if block.settings.image != blank and block.settings.bg_type == 'bg_img' -%}
                    <img class="bg-img bg-position lazyload" data-src="{{ block.settings.image | image_url }}">
                  {%- endif -%}

                  {%- if block.settings.video_url and block.settings.bg_type == 'bg_video' -%}
                    <video class="video-bg" loop autoplay preload="none" muted playsinline>
                      <source src="{{ block.settings.video_url }}" type="video/mp4">
                    </video>
                  {%- endif -%}
                </div>

                <div class="content-wrap">
                  {%- if block.settings.title != blank -%}
                    <h2 class="tile-title">
                      {{ block.settings.title | escape }}   
                    </h2>
                  {%- endif -%}

                  {%- if block.settings.text != blank -%}
                    <p class="tile-text">
                      {{ block.settings.text | escape }}   
                    </p>
                  {%- endif -%}

                  {%- if block.settings.btn_title != blank and block.settings.btn_url != blank -%}
                    <a{% if block.settings.btn_url == blank %} role="link" aria-disabled="true"{% else %} href="{{ block.settings.btn_url }}"{% endif %} class="button">
                      {{ block.settings.btn_title | escape }}
                    </a>
                  {%- endif -%}
                </div>

            </div>
          </div>
        </div>
      {%- endfor -%}
    </div>
  </div>

  {%- style -%}
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
      padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    }

    @media screen and (min-width: 750px) {
      .section-{{ section.id }}-padding {
        padding-top: {{ section.settings.padding_top }}px;
        padding-bottom: {{ section.settings.padding_bottom }}px;
      }
    }
  {%- endstyle -%}

{%- endif -%}


{% schema %}
{
  "name": "Tiles",
  "max_blocks": 2,
  "class": "tiles-section section-width",
  "blocks": [
    {
      "type": "tile_item",
      "name": "Tile",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Text"
        },
        {
          "type": "text",
          "id": "btn_title",
          "label": "Button Title"
        },
        {
          "type": "url",
          "id": "btn_url",
          "label": "Button URL"
        },
        {
          "type": "select",
          "id": "text_color",
          "options": [
            {
              "value": "dark",
              "label": "Dark"
            },
            {
              "value": "light",
              "label": "Light"
            }
          ],
          "default": "dark",
          "label": "Text Color"
        },
        {
          "type": "select",
          "id": "position",
          "options": [
            {
              "value": "top",
              "label": "Top"
            },
            {
              "value": "bottom",
              "label": "Bottom"
            }
          ],
          "default": "top",
          "label": "Text Position"
        },  
        {
          "type": "select",
          "id": "bg_type",
          "options": [
            {
              "value": "bg_img",
              "label": "Image"
            },
            {
              "value": "bg_video",
              "label": "Video"
            }
          ],
          "default": "bg_img",
          "label": "Background Type"
        },       
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }, 
        {
          "type": "url",
          "id": "video_url",
          "label": "Video File URL"
        },
        {
          "type": "checkbox",
          "id": "overlay",
          "default": false,
          "label": "Overlay"
        }     
      ]
    }
  ],
  "settings": [
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "Tiles",
      "blocks": [
        {
          "type": "tile_item"
        },
        {
          "type": "tile_item"
        }
      ]
    }
  ]
}
{% endschema %}
